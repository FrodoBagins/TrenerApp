<Window x:Class="TrenerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrenerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" Left="100" Top="20">
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="#42f456" Offset="0"/>
            <GradientStop Color="#2747bc" Offset="0.567"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TabControl TabStripPlacement="Left" Margin="10" BorderBrush="White">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"  CornerRadius="3,0,0,3" Margin="0,10,1,0" BorderBrush="Navy" BorderThickness="1">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Name="MainTab" 
                     Height="100">
                <TabItem.Header>
                    <Image Width="50" Source="images/home.png"/>
                </TabItem.Header>
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Name="Statistics_Grid"
                        ShowGridLines="False"
                          Margin="10" 
                          Background="Gray">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Name="BMI_Label"
                               Content="Twoje aktualne BMI"
                               Grid.Column="0" Grid.ColumnSpan="2"
                               Grid.Row="0"
                               Foreground="White"
                               FontSize="20"
                               Margin="6,0,0,0"
                               VerticalContentAlignment="Center"
                               >
                        </Label>

                        <Label Name="BMI_Value_Label"
                               Content="20.6"
                               Grid.Column="2" 
                               Grid.Row="0"
                               Foreground="White"
                               FontSize="20"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               >
                        </Label>


                        <ProgressBar Name="BMI_StatusBar"
                                   Grid.Column="0" Grid.ColumnSpan="3"
                                   Grid.Row="1"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="50"
                                    
                                     Margin="10,10,10,10"
                                   >

                        </ProgressBar>

                        <TextBlock Name="BMI_Value_TextBlock"
                                   Grid.Column="0" Grid.ColumnSpan="3"
                                   Grid.Row="1"
                                   FontSize="20"
                                   Foreground="Black"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="50">

                        </TextBlock>


                        <Button Name="BMI_Update_Button"
                                Grid.Column="0" Grid.ColumnSpan="3"
                                Grid.Row="2"
                                Height="40"
                                Width="100"
                                FontSize="20"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                >
                            <Button.Background>
                                <LinearGradientBrush>
                                    <GradientStop Color="ORange" Offset="0"/>
                                    <GradientStop Color="#2747bc" Offset="1"/>
                                </LinearGradientBrush>

                            </Button.Background>
                            Aktualizuj
                        </Button>


                    </Grid>
                    <Grid Name="CaloriesCounterGrid"
                        ShowGridLines="True"
                          Grid.Row="0" 
                          Grid.Column="1" 
                          Margin="10" 
                          Background="Gray">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Name="CaloriesTextBlock"
                            Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0"
                               Foreground="White"
                               FontSize="20">
                            Pozostała ilość kalorii<LineBreak />
                            do wykorzystania:
                        </TextBlock>







                    </Grid>
                    <Grid Name="NewsFeedGrid"
                        ShowGridLines="True"
                          Grid.Row="0" 
                          Grid.Column="3" 
                          Margin="10" 
                          Background="Gray">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Grid Name="WorkoutsGrid"
                        Grid.Row="1" Grid.ColumnSpan="3" Margin="10px" ShowGridLines="False" Background="Gray" Width="840">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Row="0" Grid.Column="0" Source="images/Wege.jpg"/>
                        <Label Grid.Row="1" Grid.Column="0" Background="LightGreen" Content="Dania Wegetariańskie" FontSize="12" Padding="10"/>

                        <Image Grid.Row="0" Grid.Column="1" Source="images/Rice.jpg"/>
                        <Label Grid.Row="1" Grid.Column="1" Background="Red" Content="Dania z Ryżem" FontSize="12" Padding="10"  Foreground="White"/>

                        <Image Grid.Row="0" Grid.Column="2" Source="images/Fruits.jpg"/>
                        <Label Grid.Row="1" Grid.Column="2" Background="Orange" Content="Owoce" FontSize="12" Padding="10"/>

                        <Image Grid.Row="0" Grid.Column="3" Source="images/Vegetables.jpg"/>
                        <Label Grid.Row="1" Grid.Column="3" Background="Purple" Content="Warzywa" FontSize="12" Padding="10" Foreground="White"/>

                        <Image Grid.Row="0" Grid.Column="4" Source="images/Fish.jpg"/>
                        <Label Grid.Row="1" Grid.Column="4" Background="Yellow" Content="Dania z Rybami" FontSize="12" Padding="10"/>

                        <Image Grid.Row="0" Grid.Column="5" Source="images/Smoothie.jpg"/>
                        <Label Grid.Row="1" Grid.Column="5" Background="Blue" Content="Smoothie" FontSize="12" Padding="10" Foreground="White"/>

                        <Image Grid.Row="0" Grid.Column="6" Source="images/Granola.jpg"/>
                        <Label Grid.Row="1" Grid.Column="6" Background="Turquoise" Content="Śniadania" FontSize="12" Padding="10" />

                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Name="PersonalTab" 
                     Height="100">
                <TabItem.Header>
                    <Image Width="50" Source="images/profile.png"/>
                </TabItem.Header>

            </TabItem>
            <TabItem Name="CalendarTab" 
                     Height="100">
                <TabItem.Header>
                    <Image Width="50" Source="images/callendar.png"/>
                </TabItem.Header>
            </TabItem>
            <TabItem Name="RecipesTab" 
                     Height="100">
                <TabItem.Header>
                    <Image Width="50" Source="images/Food.jpg"/>
                </TabItem.Header>

            </TabItem>
            <TabItem Name="SettingsTab" 
                     Height="100">
                <TabItem.Header>
                    <Image Width="50" Source="images/settings.png"/>
                </TabItem.Header>

            </TabItem>



        </TabControl>
    </Grid>
</Window>
