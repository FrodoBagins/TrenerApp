<Window x:Class="TrenerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrenerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" Background="#091f42" Left="100" Top="20">
    <Grid>
        <TabControl TabStripPlacement="Left" Margin="5" BorderBrush="White">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"  CornerRadius="10,0,0,10" Margin="0,10,5,0">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Height="100">
                <TabItem.Header>
                    <Image Width="50" Source="images/home.png"/>
                </TabItem.Header>
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Name="Statistics_Grid"
                        ShowGridLines="True"
                          Grid.Row="0" 
                          Grid.Column="0" 
                          Margin="10" 
                          Background="Gray">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                    </Grid>
                    <Grid Name="StartWorkoutGrid"
                        ShowGridLines="True"
                          Grid.Row="0" 
                          Grid.Column="1" 
                          Margin="10" 
                          Background="Gray">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Grid Name="NewsFeedGrid"
                        ShowGridLines="True"
                          Grid.Row="0" 
                          Grid.Column="3" 
                          Margin="10" 
                          Background="Gray">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Grid Name="WorkoutsGrid"
                        Grid.Row="1" Grid.ColumnSpan="3" Margin="10px" ShowGridLines="False" Background="Gray" Width="840">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Row="0" Grid.Column="0" Source="images/Wege.jpg"/>
                        <Label Grid.Row="1" Grid.Column="0" Background="Red" Content="Dania Wegetariańskie" FontSize="12" Padding="10"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Height="100">
                <TabItem.Header>
                    <Image Width="50" Source="images/profile.png"/>
                </TabItem.Header>

            </TabItem>
            <TabItem Height="100">
                <TabItem.Header>
                    <Image Width="50" Source="images/callendar.png"/>
                </TabItem.Header>
            </TabItem>

            <TabItem Height="100">
                <TabItem.Header>
                    <Image Width="50" Source="images/settings.png"/>
                </TabItem.Header>

            </TabItem>
        </TabControl>
    </Grid>
</Window>
